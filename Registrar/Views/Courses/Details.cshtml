@{
  Layout = "_Layout";
}

@using Registrar.Models
@model Registrar.Models.Course

<h2>Course Details</h2>
<hr />
<h3>Course Name: @Html.DisplayFor(model => model.CourseName)</h3>
<h3>@Html.DisplayNameFor(model => model.CourseNumber): @Html.DisplayFor(model => model.CourseNumber)</h3>  

@if (@Model.Students.Count == 0)
{
  <h3>No students have been added to this course yet!</h3>
} 
else
{
  <h3>Students:</h3>
  <ul>
    @foreach (Student student in Model.Students)
      {
      <li>@Html.ActionLink($"{student.StudentName}", "Details", "Students", new { id = student.StudentId })</li>
      }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>

<p>@Html.ActionLink("Edit Course", "Edit", new { id = Model.CourseId })</p>

<p>@Html.ActionLink("Add a Course", "Create", new { id = Model.CourseId })</p>